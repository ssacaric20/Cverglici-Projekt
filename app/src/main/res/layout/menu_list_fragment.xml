<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Naslov -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todays_offer"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <!-- Datum -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_example"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />


        <!-- CUSTOM SEGMENTED CONTROL -->
        <LinearLayout
            android:id="@+id/mealSegment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_segment_container"
            android:padding="4dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tabLunch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/lunch"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/bg_segment_active"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/tabDinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dinner"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>
        </LinearLayout>


        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleY="10" />

        <!-- Empty state text -->
        <TextView
            android:id="@+id/emptyStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nema dostupnih jela"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

        <!-- Recycler View za jela -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

    </LinearLayout>

</ScrollView>
