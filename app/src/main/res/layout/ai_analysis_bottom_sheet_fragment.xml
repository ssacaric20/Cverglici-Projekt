<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/aiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI analiza"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/aiSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Procjena prema opisu jela. AI može pogriješiti!"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:background="@color/gray_light" />

        <!-- Diet -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dijeta"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/dietChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:chipSpacing="8dp">

            <!-- Preview/fake chips -->
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetarijansko"
                tools:ignore="HardcodedText" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sadrži gluten"
                tools:ignore="HardcodedText" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Allergens -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Alergeni"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/allergensChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:chipSpacing="8dp">

            <!-- Preview/fake chips -->
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mlijeko"
                android:tooltipText="Triggers: parmesan, cream"
                tools:ignore="HardcodedText" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jaja"
                android:tooltipText="Triggers: mayo"
                tools:ignore="HardcodedText" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:background="@color/gray_light" />

        <!-- Nutrition estimate -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutritivna procjena"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/aiCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="620 kcal" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Proteini"
                android:textColor="@color/text_secondary"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/aiProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                tools:text="35 g" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="8dp"
                android:text="Ugljikohidrati"
                android:textColor="@color/text_secondary"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/aiCarbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_primary"
                tools:text="70 g" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="8dp"
                android:text="Masnoće"
                android:textColor="@color/text_secondary"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/aiFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_primary"
                tools:text="18 g" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="8dp"
                android:text="Vlakna"
                android:textColor="@color/text_secondary"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/aiFiber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_primary"
                tools:text="6 g" />
        </GridLayout>

    </LinearLayout>
</ScrollView>
