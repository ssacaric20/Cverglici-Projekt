<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/macro_card_bg">

    <!-- Gornji "badge" (npr. PROTEIN) -->
    <TextView
        android:id="@+id/txtMacroBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:text="PROTEIN"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/text_primary"
        android:background="@drawable/macro_badge_bg" />

    <!-- Vrijednost (npr. 35 / 120 g) -->
    <TextView
        android:id="@+id/txtMacroValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0 / 0"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/text_primary" />

    <ProgressBar
        android:id="@+id/progressMacro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="1000"
        android:progressDrawable="@drawable/progress_orange" />

</LinearLayout>
