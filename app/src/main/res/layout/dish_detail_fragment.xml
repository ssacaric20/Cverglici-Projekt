<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Header sa nazivom jela i X -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:padding="16dp">

            <!-- Naslov jela -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dishTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Pečena piletina s rižom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/dish_detail_subtitle"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- X za zatvaranje -->
            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/close"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/text_primary" />

        </FrameLayout>

        <!-- Slika jela -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/dishImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/dish_image"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_restaurant" />

            <!-- Favorite ikonica -->
            <ImageView
                android:id="@+id/favoriteIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:background="@drawable/circle_fav_bg"
                android:contentDescription="@string/favorite"
                android:padding="12dp"
                android:src="@drawable/fav_circle_bg" />

        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Cijena -->
            <TextView
                android:id="@+id/dishPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="35.00 €" />

            <!-- Opis jela -->
            <TextView
                android:id="@+id/dishDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="Sočna pečena pileća prsa poslužena s kuhanom jasmin rižom i sezonskim povrćem" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/gray_light" />

            <!-- Nutritivne vrijednosti header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nutritional_values"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- Kalorije -->
            <TextView
                android:id="@+id/caloriesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="520 kcal" />

            <!-- Makronutrijenti grid (2x2) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/macronutrients"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:columnCount="2"
                android:rowCount="2">

                <!-- Ugljikohidrati -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/carbs_bg"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carbs_label"
                        android:textColor="@color/carbs_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/carbsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/carbs_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="52g" />

                </LinearLayout>

                <!-- Vlakna -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/fiber_bg"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fiber_label"
                        android:textColor="@color/fiber_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/fiberValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/fiber_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="3g" />

                </LinearLayout>

                <!-- Masti -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/fat_bg"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fat_label"
                        android:textColor="@color/fat_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/fatValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/fat_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="12g" />

                </LinearLayout>

                <!-- Proteini -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/protein_bg"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/protein_label"
                        android:textColor="@color/protein_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/proteinValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/protein_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="45g" />

                </LinearLayout>

            </GridLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:background="@color/gray_light" />

            <!-- Sastojci -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingredients_label"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- Sastojci chips container -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/ingredientsChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:chipSpacing="8dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/gray_light" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/aiAnalyzeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="AI analiza"
                android:textAllCaps="false"
                app:icon="@android:drawable/ic_menu_search"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                tools:ignore="HardcodedText" />

            <!-- ================= RECENZIJE HEADER ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reviewsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recenzije"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/averageRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    tools:text="5.0" />

                <TextView
                    android:id="@+id/ratingsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    tools:text="(3)" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWriteReview"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    app:strokeColor="@color/gray_light"
                    android:minHeight="32dp"
                    android:minWidth="0dp"
                    android:text="@string/napisi_recenziju"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="10dp"
                    app:strokeWidth="1dp" />

            </LinearLayout>

            <!-- ================= INLINE FORMA ZA RECENZIJU ================= -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reviewFormContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vasa_ocjena"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|top"
                            android:numStars="5"
                            android:stepSize="1.0"
                            android:rating="0"
                            android:isIndicator="false" />

                    </FrameLayout>



                    <EditText
                        android:id="@+id/etReviewText"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/gray_light"
                        android:hint="@string/review_hint"
                        android:gravity="top|start"
                        android:padding="10dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSubmitReview"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minHeight="32dp"
                            android:minWidth="0dp"
                            android:text="@string/posalji_recenziju"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:cornerRadius="10dp"
                            android:backgroundTint="@color/orange_primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelReview"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minHeight="32dp"
                            android:minWidth="0dp"
                            android:layout_marginStart="12dp"
                            android:text="@string/odustani"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:cornerRadius="10dp"
                            app:strokeColor="@color/gray_light"
                            app:strokeWidth="1dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- LISTA RECENZIJA -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviewsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_review" />

            <!-- PRAZNO STANJE -->
            <TextView
                android:id="@+id/reviewsEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/no_reviews_yet"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
