<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goalsScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAddDish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodaj jelo"
                android:backgroundTint="@color/orange_primary"
                android:textColor="@color/white"
                android:paddingHorizontal="14dp"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnEditGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uredi ciljeve"
                android:backgroundTint="@color/orange_primary"
                android:textColor="@color/white"
                android:paddingHorizontal="14dp"/>
        </LinearLayout>

        <!-- Over-goal banner (prikaže se kad je prekoračeno) -->
        <TextView
            android:id="@+id/txtOverGoalBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:text="Prekoračili ste dnevni cilj unosa."
            android:padding="12dp"
            android:background="@color/orange_light"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Progress header -->
        <TextView
            android:id="@+id/txtProgressTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Današnji napredak"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/txtProgressSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tvoj dnevni unos u odnosu na ciljeve"
            android:textSize="13sp"
            android:textColor="@color/text_secondary" />

        <!-- Grid 2x2 za macro kartice -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/cardCalories"
                    layout="@layout/view_macro_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="0dp" />

                <include
                    android:id="@+id/cardProtein"
                    layout="@layout/view_macro_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/cardCarbs"
                    layout="@layout/view_macro_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="0dp" />

                <include
                    android:id="@+id/cardFat"
                    layout="@layout/view_macro_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>


        <!-- Today list -->
        <TextView
            android:id="@+id/txtTodayCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Današnji obroci: 0"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtEmptyToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Još nema unosa za danas."
            android:visibility="gone"
            android:padding="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTodayFoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</ScrollView>
