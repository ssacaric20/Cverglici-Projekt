<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Slika -->
        <ImageView
            android:id="@+id/imgDish"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:contentDescription="Slika jela"
            android:src="@android:drawable/ic_menu_gallery" />

        <!-- Tekst + badgevi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDishTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Naziv jela"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/txtDishDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Opis jela..."
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2" />

            <!-- Badge row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Calories -->
                <TextView
                    android:id="@+id/badgeCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    android:text="520 kcal"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/badge_gray_bg" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <!-- Protein -->
                <TextView
                    android:id="@+id/badgeProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    android:text="45g P"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/protein_text"
                    android:background="@drawable/badge_protein_bg" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <!-- Carbs -->
                <TextView
                    android:id="@+id/badgeCarbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    android:text="52g C"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/carbs_text"
                    android:background="@drawable/badge_carbs_bg" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <!-- Fat -->
                <TextView
                    android:id="@+id/badgeFat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    android:text="12g F"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/fat_text"
                    android:background="@drawable/badge_fat_bg" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
