<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:id="@+id/aiGeneratorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI generator jela"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/aiGeneratorSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unesi naziv i glavne sastojke. AI će procijeniti nutritivne vrijednosti, alergene i porciju."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Section: Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unos"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Dish name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naziv jela"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/gray_light"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/aiDishNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="npr. Piletina s rižom"
                android:inputType="textCapSentences"
                android:maxLines="2"
                android:minHeight="56dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ingredients -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glavni sastojci"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upiši sastojke odvojene zarezom (npr. piletina, riža, paprika)."
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxBackgroundColor="@color/gray_light"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/aiDishIngredientsInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="npr. piletina, riža, paprika"
                android:inputType="textCapSentences"
                android:maxLines="4"
                android:minHeight="100dp"
                android:gravity="top" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Generate Button -->
        <Button
            android:id="@+id/generateAiButton"
            android:text="Generiraj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/orange_primary"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

        <!-- Progress -->
        <ProgressBar
            android:id="@+id/aiProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Section: Result -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI rezultat"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/aiResultPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_light"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:padding="16dp"
            android:text="Ovdje će se prikazati rezultat nakon generiranja."
            android:layout_marginBottom="16dp" />

        <!-- Accept Button -->
        <Button
            android:id="@+id/acceptAiDishButton"
            android:text="Uredi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/soft_teal"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/cancelAiButton"
            android:text="Odustani"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_light"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>
